{% import "@component_schema/_helpers.html.twig" as helpers %}
{% set component_type = 'bulma_notification' %}
{% set errors = process_component() %}
{{- helpers.errors(errors) -}}
<{{ tag }}{{ attributes }}>
  {% block delete %}
  {% if delete %}
    {{ include('@bulma_components/elements/delete/delete.html.twig', delete) }}
  {% endif %}
  {% endblock delete %}
  {% block content %}
  {{ content }}
  {% for template in templates %}
    {{ template|raw }}
  {% endfor %}
  {% endblock content %}
</{{ tag }}>
